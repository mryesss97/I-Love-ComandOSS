generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  createdAt DateTime @default(now())

  results   Result[]
}

model Result {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  type         ResultType  // "LISTENING" or "SPEAKING"
  score        Int
  submittedAt  DateTime @default(now())
}

enum ResultType {
  LISTENING
  SPEAKING
}